generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String @unique
  hash  String

  firstName String?
  lastName  String?

  trades  Trade[]
  
  @@map("users")
}

model gainers {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    symbol            String
    previousPrice     Float
    ltp               Float
    netPrice          Float
}

model losers {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    symbol            String
    previousPrice     Float
    ltp               Float
    netPrice          Float
}

model Trade {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  date              DateTime
  trades            Int
  invested          Float
  isProfitable      Boolean
  profit            Float?
  loss              Float?
  brokerage         Float
  after_brokerage   Float
  remainingCapital  Float

  userId            Int
  user   User @relation(fields: [userId], references: [id])

  @@map("trades")
}
